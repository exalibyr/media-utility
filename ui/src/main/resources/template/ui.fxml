<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>

<?import javafx.scene.control.CheckBox?>
<VBox fx:id="root" fx:controller="com.excalibur.media.ui.controller.UIController" xmlns:fx="http://javafx.com/fxml">

    <HBox alignment="BASELINE_LEFT" spacing="20.0" >
        <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Label text="Folder"/>
        <TextField fx:id="filePath" prefWidth="300"/>
        <Button text="Browse files" onAction="#onPathButtonClick"/>
    </HBox>

    <HBox alignment="BASELINE_LEFT" spacing="20.0" >
        <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
        </padding>
        <Label text="File type"/>
        <ComboBox fx:id="fileType" prefWidth="150"/>
        <CheckBox fx:id="includeSubfolders" text="Include subfolders" prefWidth="150"/>
    </HBox>

    <HBox alignment="BASELINE_LEFT" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
        </padding>
        <Button text="Format filenames" onAction="#onFormatButtonClick"/>
        <Button text="Count files" onAction="#onCountButtonClick"/>
        <Label fx:id="output"/>
    </HBox>

</VBox>

